# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
ENVIRONMENT=development

# Database
MONGODB_URL=mongodb://localhost:27017
DB_NAME=nutricare

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4000

# Samsung Health (Optional)
SAMSUNG_CLIENT_ID=your-samsung-client-id
SAMSUNG_CLIENT_SECRET=your-samsung-client-secret
SAMSUNG_REDIRECT_URI=http://localhost:8000/api/samsung/callback

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:19006

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Rate Limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60
